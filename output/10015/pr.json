  "title": "Wallet should reject long chains by default",
  "user": {
    "login": "jnewbery",
    "id": 1063656,
    "node_id": "MDQ6VXNlcjEwNjM2NTY=",
    "avatar_url": "https://avatars.githubusercontent.com/u/1063656?v=4",
