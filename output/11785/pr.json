  "title": "Raise the open fd limit to the maximum allowed",
  "user": {
    "login": "vii",
    "id": 37696,
    "node_id": "MDQ6VXNlcjM3Njk2",
    "avatar_url": "https://avatars.githubusercontent.com/u/37696?v=4",
