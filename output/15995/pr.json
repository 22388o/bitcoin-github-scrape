  "title": "systemd service script: set usable permissions on /etc/bitcoin config dir",
  "user": {
    "login": "sipsorcery",
    "id": 197660,
    "node_id": "MDQ6VXNlcjE5NzY2MA==",
    "avatar_url": "https://avatars.githubusercontent.com/u/197660?v=4",
