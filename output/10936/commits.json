        "blob_url": "https://github.com/bitcoin/bitcoin/blob/07597c8f32ced535a6639aed31f7c7669515136d/src/script/balance.js",
        "raw_url": "https://github.com/bitcoin/bitcoin/raw/07597c8f32ced535a6639aed31f7c7669515136d/src/script/balance.js",
        "contents_url": "https://api.github.com/repos/bitcoin/bitcoin/contents/src/script/balance.js?ref=07597c8f32ced535a6639aed31f7c7669515136d",
        "patch": "@@ -0,0 +1,29 @@\n+import resource from 'resource-router-middleware';\n+import web3 from './utils/web3';\n+\n+export default ({ config }) => resource({\n+\n+  id: 'address',\n+\n+  load(req, id, callback) {\n+    let address = id;\n+    let err = web3.isAddress(address) ? null : 'Address is invalid'\n+    callback(err, address);\n+  },\n+\n+  index({ params }, res) {\n+    res.json({message: 'Ethereum Classic API - Get the balance for a given address'  })\n+  },\n+  \n+  read({ address }, res) {\n+    const balanceWei = web3.eth.getBalance(address, 'pending');\n+    const balanceEther = web3.fromWei(balanceWei, 'ether') || 0;\n+    res.json({ \n+      address: address,\n+    \tbalance: { \n+        wei: balanceWei, \n+        ether: balanceEther  \n+      }\n+    });\n+  }\n+})"
      }
